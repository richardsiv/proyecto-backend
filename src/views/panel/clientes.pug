extends ../layout/panel
block list
    include ../includes/panel/navbar
    .container
        .row
            .col-md-9.my-4.mx-auto
                .container 
                    .card.card-body
                        form(action='/api/crear/cliente' method='post')
                                legend.text-center.card-title.text-uppercase Clientes 
                                .form-group
                                label.col-md-3.control-label(for='nombre') Nombre
                                .col-md-12
                                    input#nombre.form-control(name='nombre' required='true' type='text' placeholder='Escribe el nombre...')
                                .form-group
                                label.col-md-3.control-label(for='apellido') Apellido
                                .col-md-12
                                    input#marca.form-control(name='apellido' required='true' type='text' placeholder='Ingresa el apellido...')
                                .form-group
                                label.col-md-3.control-label(for='cedula') DNI
                                .col-md-12
                                    input#precio.form-control(name='cedula' required='true' type='text' placeholder='Ingresa el dni...')
                                .form-group
                                label.col-md-3.control-label(for='contacto') Contacto
                                .col-md-12
                                    input#imagen.form-control(name='contacto' required='true' type='tel' placeholder='Ingresa numero de contacto...')
                                .form-group
                                .col-md-12.text-center
                                    button.btn.btn-primary.btn-block.font-weight-bold(type='submit') Agregar
    .container 
        .row 
            .col-md-10.mx-auto
                if(clientes.length > 0)
                    table.table.table-striped.mb-5.bg-info
                        table.table.table-striped.mb-5
                            thead.background-table.text-center.bg-danger.text-white
                                th(scope='col') Nombre
                                th(scope='col') Apellido
                                th(scope='col') Cedula 
                                th(scope='col') Contacto
                                th(scope='col') Editar/Eliminar
                                for client of clientes
                                    tbody.text-center
                                        tr
                                        th(scope='row') #{client.nombre}
                                        th(scope='row') #{client.apellido}
                                        th(scope='row') #{client.cedula}
                                        th(scope='row') #{client.contacto}
                                        td
                                            a(href=`/api/actualizar/cliente/${client.id}`).btn.btn-info Editar
                                            a(href=`/api/eliminar/cliente/${client.id}`).btn.btn-danger.ml-2 X
                else 
                    p.text-center.my-5.font-weight-bold.bg-info.text-white.p-2 No existen clientes registrados